   <param name="driver" value="WIIMOTE"/>
  </node>
 
  <node name="wiimote" type="HistoryProject">
   <param name="project">BUTTON, ACCELERATION</param>
  </node>
  
  <node name="cdt_0" type="ChangeDetect[double]"/>
  
  <node name="d2s" type="TypeConvert[double,string]"/>
  
