	<node name="b2s" type="TypeConvert[bool,string]"/>
	<node name="b_print" type="print"/>
	 
 </graph>
 <edges>
  <edge fromnode="source" tonode="wiimote" fromport="history" toport="history"/>
  
  <edge fromnode="wiimote" tonode="cdt_0" fromport="BUTTON_0" toport="val_in"/>
